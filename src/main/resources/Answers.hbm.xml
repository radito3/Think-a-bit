<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "org.elsys.netprog.model.Answers" table = "Answers">

        <meta attribute = "class-description">
            This class contains the answers details.
        </meta>

        <id name = "Id" type = "int" column = "Id">
            <generator class="native"/>
        </id>

        <property name = "QuestionId" type = "int" column = "QuestionId" />
        <property name = "Payload" type = "int" column = "Payload" />
        <property name = "IsCorrect" type = "boolean" column = "IsCorrect" />

    </class>
</hibernate-mapping>
